{
	"manifest_version": 2,
    	"name": "GitHub Code Search",
	"description": "Search GitHub code directly from Firefox.",
	"version": "0.1",
	"applications":{
		"gecko": {
			"strict_min_version": "73.0"
		}
	},
	"icons": {
		"32": "icon.png"
	},
  	"chrome_settings_overrides": {
		"search_provider": {
		"name": "GitHub Code Search",
            	"keyword": "@CS",
		"search_url": "https://cs.github.com/?scopeName=All+repos&scope=&q={searchTerms}"
		}
	}
}
