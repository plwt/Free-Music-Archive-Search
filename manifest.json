{
	"manifest_version": 2,
    	"name": "FMA Search",
	"description": "Search the Free Music Archive directly from Firefox.",
	"version": "0.1",
	"applications":{
		"gecko": {
			"strict_min_version": "73.0"
		}
	},
	"icons": {
		"32": "icon.png"
	},
  	"chrome_settings_overrides": {
		"search_provider": {
		"name": "FMA Search",
            	"keyword": "@FMA",
		"search_url": "https://freemusicarchive.org/search/?quicksearch={searchTerms}"
		}
	}
}
